
<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_area :title %>
    <%= f.label "Content" %>
    <%= f.text_area :content %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
    <%= f.fields_for :categories, Category.new do |categories_fields| %>
      <%= categories_fields.text_field :name %>
    <% end %>
    <%= f.submit %>
  <% end %> 